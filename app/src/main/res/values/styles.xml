<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="menu">@menu/app_bar_menu</item>
        <item name="titleMarginStart">20dp</item>
    </style>
    <style name = "textOfCurrencyInMarketList">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name = "globalStatsTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/arctic</item>
        <item name="fontFamily">@font/notosansjp_bold</item>
    </style>
    <style name="articleStyle">
        <item name="color"> @color/black </item>
        <item name="android:textSize"> 15sp</item>
        <item name="fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="textInGlobalInfoPageStyle">
        <item name="android:textColor">@color/arctic</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/notosansjp_black</item>
    </style>

    <style name="headerText">
        <item name = "layout_goneMarginTop">5dp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/arctic</item>
    </style>

    <style name="currencyProfileTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">200dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/brickSecond</item>
        <item name = "tabMode">scrollable</item>
        <item name = "layout_scrollFlags">scroll</item>
        <item name = "tabGravity">start</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CharacteristicTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CharacteristicsTitleTextSTYLE">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LinksStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>