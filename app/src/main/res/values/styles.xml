<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="menu">@menu/app_bar_menu</item>
    </style>
    <style name = "textOfCurrencyInMarketList">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name = "globalStatsTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/arctic</item>
        <item name="fontFamily">@font/notosansjp_bold</item>
    </style>
    <style name="articleStyle">
        <item name="color"> @color/black </item>
        <item name="android:textSize"> 15sp</item>
        <item name="fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="textInGlobalInfoPageStyle">
        <item name="android:textColor">@color/arctic</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/notosansjp_black</item>
    </style>

    <style name="headerText">
        <item name = "layout_goneMarginTop">5dp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/arctic</item>
    </style>
</resources>